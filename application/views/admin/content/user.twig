<div class="row">
    <div class="col-md-12">

        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-xs-6">
                        <h3 class="panel-title">Lista użytkowników</h3>
                    </div>
                    <div class="col col-xs-6 text-right">
                        <a href="{{ base_url('admin/user/create') }}" class="btn btn-sm btn-primary btn-create">Nowe
                            konto</a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                    <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em></th>
                        <th class="hidden-xs">ID</th>
                        <th>IDENT</th>
                        <th>Email</th>
                        <th>Imię i Nazwisko</th>
                        <th>Pozycja</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td align="left" style="width: 20%; !important;">
                            {% if user.active == '1' %}
                                <a href="{{ base_url('admin/user/deactive/') }}{{ user.id }}"
                                   class="btn btn-xs btn-success"><em class="fa fa-check"></em></a>
                            {% elseif user.active == '0' %}
                                <a href="{{ base_url('admin/user/active/') }}{{ user.id }}"
                                   class="btn btn-xs btn-danger"><em class="fa fa-close"></em></a>
                            {% endif %}
                            <a href="{{ base_url('admin/user/recover/') }}{{ user.id }}" class="btn btn-xs btn-warning"><em
                                        class="fa fa-key"></em></a>
                            <a href="{{ base_url('admin/user/edit/') }}{{ user.id }}" class="btn btn-xs btn-default"><em
                                        class="fa fa-pencil"></em></a>
                            <a href="{{ base_url('admin/user/delete/') }}{{ user.id }}"
                               class="btn btn-xs btn-danger"><em class="fa fa-trash"></em></a>
                        </td>

                        {#  {{ dump(users) }}#}

                        <td class="hidden-xs">{{ user.id }}</td>
                        <td style="width: 10%; !important;">{{ user.ident }}</td>
                        <td style="width: 10%; !important;">{{ user.email }}</td>
                        <td>{{ user.name }} {{  user.surname }}</td>

                        {% if user.groups_id == '1' %}
                            <td class="danger"><span class="label label-danger">{{ user.name_groups }}</span></td>
                        {% elseif user.groups_id == '2' %}
                            <td class="warning"><span class="label label-warning">{{ user.name_groups }}</span></td>
                        {% elseif user.groups_id == '3' %}
                            <td class="info"><span class="label label-info">{{ user.name_groups }}</span></td>
                        {% endif %}

                        {% endfor %}


                    </tr>
                    </tbody>
                </table>

            </div>
            <div class="panel-footer">
                <div class="row">
                    {% if pagination is not null %}
                        {{ pagination|raw }}
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
</div>
